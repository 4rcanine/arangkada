<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main App Theme WITH Material Components -->
    <style name="Theme.Arangkada" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary / accent colors -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_color</item>
    </style>

    <!-- Explicit NoActionBar variant (optional) -->
    <style name="Theme.Arangkada.NoActionBar" parent="Theme.Arangkada">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
