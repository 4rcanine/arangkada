<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etRegularFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Regular Fare"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etStudentFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Fare"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etSeniorFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senior Fare"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etTravelTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Travel Time (minutes)"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>
