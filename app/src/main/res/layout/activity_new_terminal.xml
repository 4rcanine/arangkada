<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_primary"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_header_background"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Route"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register new terminals, fares, and travel times"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:alpha="0.9" />
            </LinearLayout>

            <!-- Form Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Terminal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terminal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etTerminal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Terminal"
                        android:padding="16dp"
                        android:inputType="textCapWords"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <!-- Destination -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Destination"
                        android:padding="16dp"
                        android:inputType="textCapWords"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Location"
                        android:padding="16dp"
                        android:inputType="textCapWords"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <!-- Fares -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fare Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Regular Fare -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etRegularFare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Regular Fare"
                        android:padding="16dp"
                        android:inputType="number"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <!-- Student Fare -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etStudentFare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Student Fare"
                        android:padding="16dp"
                        android:inputType="number"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <!-- Senior Fare -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etSeniorFare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Senior Fare"
                        android:padding="16dp"
                        android:inputType="number"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel Time"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                <!-- Travel Time -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etTravelTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Enter Travel Time (minutes)"
                        android:inputType="number"
                        android:padding="16dp" />
                </androidx.cardview.widget.CardView>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnAddRoute"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Add Route"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="12dp"
                        app:backgroundTint="@null"
                        app:strokeColor="@null"
                        android:background="@drawable/button_secondary" />



                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCurrentRoutes"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Current Routes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        app:strokeColor="@null"
                        android:background="@drawable/button_primary"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading Overlay -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
