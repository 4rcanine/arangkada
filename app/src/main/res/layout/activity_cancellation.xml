<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_header_background"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Trips"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your active and pending trips below"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:alpha="0.9" />
    </LinearLayout>

    <!-- No Active Booking Message -->
    <TextView
        android:id="@+id/tvNoBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No active booking as of the moment."
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        android:textColor="@color/text_primary" />

    <!-- RecyclerView for Bookings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Action Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_back_to_trips"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="View History"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_cancel"
            android:elevation="0dp" />
    </LinearLayout>
</LinearLayout>
