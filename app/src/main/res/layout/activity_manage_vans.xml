<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_primary"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_header_background"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Van Schedules"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add new van trips easily"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:alpha="0.9" />
            </LinearLayout>

            <!-- Destination Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <Spinner
                        android:id="@+id/spinnerDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Departure Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time of Departure"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/background_card">

                        <TextView
                            android:id="@+id/tvDeparture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select date and time"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:padding="8dp" />

                        <Button
                            android:id="@+id/btnPickDeparture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick Date and Time"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/primary_color"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Van Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Van Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Plate Number -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etVanPlate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Plate Number"
                        android:inputType="textCapCharacters"
                        android:padding="16dp"
                        android:background="@android:color/transparent" />
                </androidx.cardview.widget.CardView>

                <!-- Seat Capacity -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <EditText
                        android:id="@+id/etSeatCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Seat Capacity"
                        android:inputType="number"
                        android:padding="16dp"
                        android:background="@android:color/transparent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Save Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <Button
                    android:id="@+id/btnSaveSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save Schedule"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_primary" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading overlay -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
